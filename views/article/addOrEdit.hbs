<h3>{{viewTitle}}</h3>
<li><a href="/picture">Ajouter une image</a></li>
<form action="/article" method="POST" autocomplete="off">
    <input type="hidden" name="id" value="">
    <div class="form-group">
        <label>Titre</label>
        <input type="text" class="form-control" name="title" value="{{article.title}}" placeholder="Titre">
        <div class="text-danger">
            {{article.titleError}}
        </div>
    </div>
    <div class="form-group">
        <label>Contenu</label>
        <textarea class="form-control" name="content" value="{{article.content}}"
            placeholder="Votre article">{{article.content}}</textarea>
        <div class="text-danger">
            {{article.contentError}}
        </div>
    </div>
    <div class="form-control">
        <label>Date</label>
         <input type="text" name="date_creation" class="datepicker">
    </div>
    <div class="form-group md-6">
        <label>Auteur</label>

        <select name="id_user">

            <option>Choose your author</option>
            {{#each authors}}
            <option value="{{this.id}}">{{this.user_firstname}} {{this.user_lastname}}</option>
            {{/each}}

        </select>

    </div>

    <div class="form-group md-6">
        <label>Cat√©gorie</label>

        <select  name="id_category" multiple>

            <option>Choose your category</option>
            {{#each categories}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}

        </select>
    </div>
    <div class="form-group">
        <select class="icons" name="id_picture" >
            <option >Choose your picture</option>
            {{#each picture}}
            <option value="{{this.id_picture}}" data-icon="{{this.type}}" class="left">{{this.picturename}}</option>
            {{/each}}

        </select>
    </div>
    <div class="form-group">
        <div class="image-preview">
            <img src="" name="id_picture" value="" alt="">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-database"></i>Submit</button>
        <a href="/article/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
    </div>
</form>