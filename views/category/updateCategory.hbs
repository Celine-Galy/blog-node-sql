
<h3>{{viewTitle}}</h3>

<form action="/category" method="POST" autocomplete="off"> 
{{#each categories}}
    <input type="hidden" name="id" value="{{this.id}}">
    <div class="form-group">
        <label>Nom</label>
        <input type="text"  class="form-control" name="name" value="{{this.name}}" placeholder="name">
        
    </div>
    <div class="form-group">
        <label>Contenu</label>
        <textarea class="form-control" name="description" value="{{this.description}}"
            placeholder="Votre article">{{this.description}}</textarea>
        
   {{/each}}
    <div class="form-group">
        <button type="submit" class="btn btn-info">
            <i class="fa fa-database"></i>Submit</button>
        <a href="/category/list" class="btn btn-danger">
            <i class="fa fa-list-alt"></i>View All
        </a>
    </div>
 </div>

</form>