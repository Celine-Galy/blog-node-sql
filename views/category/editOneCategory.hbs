<div class="container">
    <h3>{{viewTitle}}</h3>
    {{#each category}}
    <h3 name="name">{{this.name}}</h3>

    <div class="row">
        <div class="col s12">

            <div class="card">


                <div class="card-content">
                    <p name="description">
                        {{this.description}}</p>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="row">
            <div class="col s9">{{#each articles}}
                <div class="card large">
                    <div class="card-image">
                        <img src="/{{this.type}}">
                        <span class="card-title">{{this.title}}</span>
                    </div>
                    <div class="card-content">
                        <p><span class="new badge">{{this.name}}</span></p>
                    </div>
                    <div class="card-content">
                        <p>{{this.user_firstname}} {{user_lastname}}</p>
                    </div>
                    <div class="card-content">
                        <p>{{this.content}}</p>
                    </div>

                    <div class="card-content">
                        <p>{{this.date_creation}}</p>
                    </div>
                    <div class="card-action">
                        <a href="/{{this.id_article}}"> Voir l'article</a>

                    </div>{{/each}}
                </div>
            </div>
        </div>
    </div>
</div>